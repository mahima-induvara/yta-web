import ContactDrawer from "@components/ContactDrawer";
import RegionWidget from "@components/RegionWidget.astro";

const jobs = jobsData.map(job => ({
  title: job.Job_Title,
  benefit: job.Save_Up,
  department: job.Job_Department,
  tags: [job.Job_Type, job.Job_Work_Mode],
  responsibilities: job.Job_Responsibilities.split("\n").map(item => item.trim()).filter(Boolean),
}));

const logos = [Logo1.src, Logo2.src, Logo3.src, Logo4.src, Logo5.src, Logo6.src, Logo7.src, Logo8.src, Logo9.src];

const steps = [
  {
    n: 1,
    title: "Discovery Call",
    time: "> 10 minutes",
    body: "Speak with a discovery call where we understand your requirements, challenges, and goals to align the right talent for you.",
  },
  {
    n: 2,
    title: "Job Description",
    time: "> 24 hours",
    body: "We help you draft a job description for your role, giving you the time and value needed to fill.",
  },
  {
    n: 3,
    title: "Recruitment",
    time: "> 6 weeks",
    body: "Once the job description is approved, we begin the recruitment process, managing shortlisting, interviews, and ensuring the right talent is working with you directly.",
  },
];

const { price = "£945", priceTech = "£1,199" } = Astro.props;

const badges = ["Hire < 6 weeks", "No employment risk", "Transparent"];

const stats = [
  { value: 150,  suffix: "+",  label: "Offshore workforce" },
  { value: 150, suffix: "+",   label: "Global brands" },
  { value: 8,  suffix: "M",   label: "Savings delivered", prefix: "£"},
  { value: 8,  suffix: "+",   label: "Years of experience" },
];
const { ctaHref = "/quote", ctaText = "Get a free quote" } = Astro.props;

