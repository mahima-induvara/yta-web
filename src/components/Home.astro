            </svg>
          </a>
          <a
            href="/hire"
            class="inline-flex justify-center rounded-xl border border-white px-6 py-3 font-medium hover:bg-white hover:text-[#152651]"
          >
            Browse Specialist Talent
          </a>
        </div>
      </div>

      <!-- RIGHT: Image grid with floating labels -->
      <div
        class="lg:col-span-6 relative home-left hidden lg:block"
        style=`background-image: url('${Background_image.src}'); background-size: cover; background-position: center; width: 100%; height: 600px; border-radius: 1rem;'`
      >
        <div class="absolute top-[65px] left-[150px] label-bloom">
          Software Development
        </div>
        <div class="absolute top-[65px] right-[60px] label-bloom">HR Operations</div>
        <div class="absolute top-[160px] left-[80px] label-bloom">
          Virtual assistants
        </div>
        <div class="absolute bottom-[65px] right-[155px] label-bloom">Marketing</div>
        <div class="absolute bottom-1/4 right-1/4 label-bloom">Finance & Accounting</div>
        <div class="absolute bottom-[150px] left-[0] label-bloom">Bookkeepers</div>
        <div class="absolute top-[280px] right-[40px] label-bloom">Accountants</div>
        <div class="absolute bottom-[60px] left-[15%] label-bloom">
          Designers
        </div>
      </div>
    </div>
  </div>

  <!-- Logo Slider -->
  <div class="py-[4%]">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <p class="mb-6 text-center lg:text-left">
        Partner of choice for seamless global recruitment and workforce
        solutions
      </p>
      <div class="swiper swiperLogo">
        <div class="swiper-wrapper">
          {
            logos.map((logo, i) => (
              <img
                src={logo}
                alt={`Partner ${i}`}
                class="swiper-slide h-10 w-auto opacity-100 hover:opacity-100"
              />
            ))
          }
        </div>
      </div>
    </div>
  </div>
  <script>
    import Swiper from "swiper";
    import { Autoplay } from "swiper/modules";
    import "swiper/css";

    const swiper = new Swiper(".swiperLogo", {
      modules: [Autoplay],
      loop: true,
      slidesPerView: 'auto',
      spaceBetween: 80,
      speed: 5000, 
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
      },
      breakpoints: {
        0: { slidesPerView: 2,
          spaceBetween: 10
         },
        640: { slidesPerView: 4,
          spaceBetween: 30
        },
        1024: { slidesPerView: 7},
      },
    });
