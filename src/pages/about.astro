  <section
    id="about-banner"
    class="relative overflow-hidden bg-[#5271FF] text-white"
  >
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16">
      <div
        class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center mx-auto text-center"
