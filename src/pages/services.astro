        class="phone-frame relative w-[280px] sm:w-[320px] md:w-[360px]"
      >
        <!-- phone PNG -->
        <img
          src={IphoneFrame.src}
          alt="Phone frame"
          class="block w-full relative z-10"
        />

        <!-- video overlay -->
        <div class="absolute inset-[2%] rounded-[2rem] overflow-hidden z-0">
          <video
            src={videoSrc}
            autoplay
            muted
            loop
            playsinline
            class="w-full h-full object-cover"></video>
        </div>
      </div>

      <!-- Right side content -->
